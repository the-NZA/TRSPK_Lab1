@using UILayerWebsite.Controllers
@{
    ViewData["Title"] = "Добавить новую ценную бумагу";
    StocksCreate modl = Model;
}
<h1 class="mb-5">@ViewData["Title"]</h1>

<div class="main-content">
    <div class="border rounded p-3">
        <h3 class="text-center fw-bold mb-3">Ввод данных</h3>
        <form action="/Stocks/Create">
            <div class="form-group mb-3">
                <label class="fw-bold" for="stock-name">Название ценной бумаги</label>
                <input type="text" class="form-control" id="stock-name" name="stockName" required>
            </div>
            <h4 class="border-bottom fs-5 pb-3 mb-3">Начальная стоимость</h4>
            <div class="form-group mb-3">
                <label class="fw-bold" for="stock-date">Дата</label>
                <input type="date" class="form-control" id="stock-date" name="date" required>
            </div>
            <div class="form-group mb-3">
                <label class="fw-bold" for="stock-rate">Стоимость</label>
                <input type="number" step="any" min="0" class="form-control" id="stock-rate" name="rate" required>
            </div>
            <button type="submit" class="btn btn-primary">Отправить</button>
        </form>

    </div>

    @if (modl.IsResult)
    {
        <div class="border rounded p-3">
            <h3 class="text-center fw-bold mb-3">Результат</h3>
            <div class="alert alert-success" role="alert">
                Новая ценная бумага успешно добавлена
            </div>
        </div>
    }

    @if (modl.IsError)
    {
        <div class="border rounded p-3">
            <h3 class="text-center fw-bold mb-3">Ошибка</h3>
            <div class="alert alert-danger" role="alert">
                @modl.ErrMessage
            </div>
        </div>
    }
</div>